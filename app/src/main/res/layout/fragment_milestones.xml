<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.milestones.MilestonesFragment"
    android:background="@color/main_background">

    <LinearLayout
        android:id="@+id/milestones_top"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="horizontal"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top_profile_picture_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerInside"
            tools:src="@drawable/person_24px_white"
            android:background="@drawable/circle_border"/>

        <TextView
            android:id="@+id/top_profile_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"

            android:text="@string/profile_name"
            android:textColor="@color/main_foreground"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/milestones_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"
        android:background="@drawable/layout_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/milestones_top"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/milestones_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="96dp">

            <TextView
                android:id="@+id/milestones_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/milestones_name"
                android:textAlignment="center"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/engagement_badges_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/engagement_badges_name"
                android:textAlignment="center"
                android:textSize="32sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </ScrollView>

            <LinearLayout
                android:id="@+id/engagement_badges_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="@drawable/badge_layout_border"
                android:layout_margin="20dp"
                android:padding="16dp"
                >

                <LinearLayout
                    android:id="@+id/new_member_layout"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/new_member_badge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/badge_border"
                        android:scaleType="centerInside"
                        android:src="@drawable/check_circle_24px" />

                    <TextView
                        android:id="@+id/new_member_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="@string/new_member_name"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/first_post_layout"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/first_post_badge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/badge_border"
                        android:scaleType="centerInside"
                        android:src="@drawable/security_24px" />

                    <TextView
                        android:id="@+id/first_post_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="@string/first_post_name"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/daily_visitor_layout"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/daily_visitor_badge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/badge_border"
                        android:scaleType="centerInside"
                        android:src="@drawable/paid_24px" />

                    <TextView
                        android:id="@+id/daily_visitor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="@string/daily_visitor_name"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/helpful_user_layout"
                    android:layout_width="88dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/helpful_user_badge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/badge_border"
                        android:scaleType="centerInside"
                        android:src="@drawable/adjust_24px" />

                    <TextView
                        android:id="@+id/helpful_user_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="@string/helpful_user_name"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/contribution_badges_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/contribution_badges_name"
                android:textAlignment="center"
                android:textSize="32sp" />

            <LinearLayout
                android:id="@+id/contribution_badges_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                
                android:orientation="horizontal"
                android:background="@drawable/badge_layout_border"
                android:layout_margin="20dp"
                android:padding="16dp"
                >

                <LinearLayout
                    android:id="@+id/volunteer_hero_layout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/volunteer_hero_badge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/badge_border"
                        android:scaleType="centerInside"
                        android:src="@drawable/check_circle_24px" />

                    <TextView
                        android:id="@+id/volunteer_hero_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="@string/volunteer_hero_name"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event_attendee_layout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/even_attendee_badge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/badge_border"
                        android:scaleType="centerInside"
                        android:src="@drawable/security_24px" />

                    <TextView
                        android:id="@+id/event_attendee_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="@string/event_attendee_name"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fundraiser_layout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/fundraiser_badge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/badge_border"
                        android:scaleType="centerInside"
                        android:src="@drawable/paid_24px" />

                    <TextView
                        android:id="@+id/fundraiser_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="@string/fundraiser_name"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/content_contributor_layout"
                    android:layout_width="108dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:id="@+id/content_contributor_badge"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/badge_border"
                        android:scaleType="centerInside"
                        android:src="@drawable/adjust_24px" />

                    <TextView
                        android:id="@+id/content_contributor_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"

                        android:text="@string/content_contributor_name"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>