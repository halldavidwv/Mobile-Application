<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.milestones.MilestonesFragment"
    android:background="@color/main_background">

    <LinearLayout
        android:id="@+id/milestones_top"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="horizontal"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top_profile_picture_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerInside"
            tools:src="@drawable/person_24px_white"
            android:background="@drawable/circle_border"/>

        <TextView
            android:id="@+id/top_profile_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"

            android:text="@string/profile_name"
            android:textColor="@color/main_foreground"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/milestones_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"
        android:background="@drawable/layout_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/milestones_top"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/milestones_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="96dp">

            <TextView
                android:id="@+id/milestones_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/milestones_name"
                android:textAlignment="center"
                android:textSize="48sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/engagement_badges_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/engagement_badges_name"
                android:textAlignment="center"
                android:textSize="32sp" />

            <FrameLayout
                android:id="@+id/engagement_badges_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/engagement_badges_layout_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/badge_layout_border" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">

                    <LinearLayout
                            android:id="@+id/engagement_badges_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <LinearLayout
                                android:id="@+id/new_member_layout"
                                android:layout_width="88dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <ImageView
                                    android:id="@+id/new_member_badge"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/badge_border"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/check_circle_24px" />

                                <TextView
                                    android:id="@+id/new_member_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"

                                    android:text="@string/new_member_name"
                                    android:textAlignment="center"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/first_post_layout"
                                android:layout_width="88dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <ImageView
                                    android:id="@+id/first_post_badge"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/badge_border"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/security_24px" />

                                <TextView
                                    android:id="@+id/first_post_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"

                                    android:text="@string/first_post_name"
                                    android:textAlignment="center"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/daily_visitor_layout"
                                android:layout_width="88dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <ImageView
                                    android:id="@+id/daily_visitor_badge"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/badge_border"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/paid_24px" />

                                <TextView
                                    android:id="@+id/daily_visitor_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"

                                    android:text="@string/daily_visitor_name"
                                    android:textAlignment="center"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/helpful_user_layout"
                                android:layout_width="88dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                tools:ignore="UselessParent">

                                <ImageView
                                    android:id="@+id/helpful_user_badge"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:background="@drawable/badge_border"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/adjust_24px" />

                                <TextView
                                    android:id="@+id/helpful_user_text_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"

                                    android:text="@string/helpful_user_name"
                                    android:textAlignment="center"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </LinearLayout>
                </HorizontalScrollView>

            </FrameLayout>

            <TextView
                android:id="@+id/contribution_badges_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/contribution_badges_name"
                android:textAlignment="center"
                android:textSize="32sp" />

            <FrameLayout
                android:id="@+id/contribution_badges_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/contribution_badges_layout_background2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/badge_layout_border" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/contribution_badges_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/volunteer_hero_layout"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/volunteer_hero_badge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/badge_border"
                                android:scaleType="centerInside"
                                android:src="@drawable/check_circle_24px" />

                            <TextView
                                android:id="@+id/volunteer_hero_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:text="@string/volunteer_hero_name"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/event_attendee_layout"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/even_attendee_badge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/badge_border"
                                android:scaleType="centerInside"
                                android:src="@drawable/security_24px" />

                            <TextView
                                android:id="@+id/event_attendee_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:text="@string/event_attendee_name"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fundraiser_layout"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/fundraiser_badge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/badge_border"
                                android:scaleType="centerInside"
                                android:src="@drawable/paid_24px" />

                            <TextView
                                android:id="@+id/fundraiser_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:text="@string/fundraiser_name"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/content_contributor_layout"
                            android:layout_width="108dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/content_contributor_badge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/badge_border"
                                android:scaleType="centerInside"
                                android:src="@drawable/adjust_24px" />

                            <TextView
                                android:id="@+id/content_contributor_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:text="@string/content_contributor_name"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </FrameLayout>

            <TextView
                android:id="@+id/awareness_badges_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/awareness_badges_name"
                android:textAlignment="center"
                android:textSize="32sp" />

            <FrameLayout
                android:id="@+id/awareness_badges_frame_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/awareness_badges_layout_background"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/badge_layout_border" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/awareness_badges_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/awareness_advocate_layout"
                            android:layout_width="116dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/awareness_advocate_badge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/badge_border"
                                android:scaleType="centerInside"
                                android:src="@drawable/check_circle_24px" />

                            <TextView
                                android:id="@+id/awareness_advocate_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:text="@string/awareness_advocate_name"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/survey_star_layout"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/survey_star_badge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/badge_border"
                                android:scaleType="centerInside"
                                android:src="@drawable/security_24px" />

                            <TextView
                                android:id="@+id/survey_star_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:text="@string/survey_star_name"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/workshop_warrior_layout"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/workshop_warrior_badge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/badge_border"
                                android:scaleType="centerInside"
                                android:src="@drawable/paid_24px" />

                            <TextView
                                android:id="@+id/workshop_warrior_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:text="@string/workshop_warrior_name"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/awareness_contributor_layout"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/awareness_contributor_badge"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:background="@drawable/badge_border"
                                android:scaleType="centerInside"
                                android:src="@drawable/adjust_24px" />

                            <TextView
                                android:id="@+id/awareness_contributor_text_view"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"

                                android:text="@string/awareness_contributor_name"
                                android:textAlignment="center"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </FrameLayout>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>