<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.search.SearchFragment"
    android:background="@color/main_background">

    <LinearLayout
        android:id="@+id/search_top"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="horizontal"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top_profile_picture_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerInside"
            tools:src="@drawable/person_24px_white"
            android:background="@drawable/circle_border"/>

        <TextView
            android:id="@+id/top_profile_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"

            android:text="@string/profile_name"
            android:textColor="@color/main_foreground"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/search_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"
        android:background="@drawable/layout_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_top"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/profile_name_and_description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="96dp">

            <com.google.android.material.search.SearchView
                android:layout_width="312dp"
                android:layout_height="64dp"
                android:layout_margin="24dp"
                android:hint="@string/searchbar_hint"
                app:layout_anchor="@id/search_bar">

                <!-- Search suggestions/results go here (ScrollView, RecyclerView, etc.). -->

            </com.google.android.material.search.SearchView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>