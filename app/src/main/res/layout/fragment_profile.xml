<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment"
    android:background="@color/main_background">


    <LinearLayout
        android:id="@+id/profile_top"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="horizontal"
        android:padding="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >

        <ImageView
            android:id="@+id/top_profile_picture_image_view"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_border"
            android:scaleType="centerInside"
            tools:src="@drawable/person_24px_white" />

        <TextView
            android:id="@+id/top_profile_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"

            android:text="@string/profile_name"
            android:textColor="@color/main_foreground"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/profile_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"

        android:background="@drawable/layout_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profile_top"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/profile_name_and_description_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="96dp">

            <ImageView
                android:id="@+id/bottom_profile_background"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:layout_margin="24dp"
                android:background="@drawable/rounded_rectangle_border"
                android:scaleType="centerInside"
                android:src="@drawable/image_24px" />

            <TextView
                android:id="@+id/bottom_profile_name_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="128dp"

                android:text="@string/profile_name"
                android:textAlignment="center"
                android:textSize="42sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bottom_profile_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/profile_description"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/bottom_profile_activities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/profile_activities"
                android:textAlignment="center"
                android:textSize="42sp"
                android:textStyle="bold" />

            <com.google.android.material.carousel.MaskableFrameLayout
                android:id="@+id/carousel_item_container"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:foreground="?attr/selectableItemBackground"
                app:shapeAppearance="?attr/shapeAppearanceCornerExtraLarge">

                <ImageView
                    android:id="@+id/carousel_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/carousel_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="196dp"
                    android:clipChildren="false"
                    android:clipToPadding="false" />
            </com.google.android.material.carousel.MaskableFrameLayout>

            <TextView
                android:id="@+id/bottom_profile_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/profile_events"
                android:textAlignment="center"
                android:textSize="42sp"
                android:textStyle="bold" />

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginHorizontal="64dp"
                android:paddingTop="16dp" />

            <TextView
                android:id="@+id/bottom_profile_links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="40dp"

                android:text="@string/profile_links"
                android:textAlignment="center"
                android:textSize="42sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/bottom_profile_facebook_link_image_button"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginHorizontal="172dp"
                android:layout_marginTop="32dp"

                android:background="@drawable/circle_border"
                android:scaleType="centerInside"
                android:src="@drawable/facebook_36px" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>